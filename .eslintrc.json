{
  "extends": ["airbnb", "next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "import/no-cycle": [
      "error",
      {
        "maxDepth": 1
      }
    ],
    "import/order": [
      "error",
      {
        "newlines-between": "always"
      }
    ],
    "no-else-return": [
      "error",
      {
        "allowElseIf": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
